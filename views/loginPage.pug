doctype html
html
  head
    title login
    link(rel='stylesheet',type="text/css", href='/stylesheets/login.css')
  body
    div(class ='limit') 
        div(class='container-login100')
            form(class = 'login100-form',action='/users', method='POST')
                span(class='login100-form-title') LOGIN
                h4(style="color:red")  #{error}
                div(class='wrap-input valid-input', data-validate='Enter username')
                    input( name = 'username', class = 'input1', type = 'text', placeholder='Username')
                    span(class='focus-input')
                div(class='wrap-input valid-input', data-validate='Enter password')
                    input(name = 'password', class = 'input1', type = 'password', placeholder='Password')
                    span(class='focus-input')
                div(class='container-login100-form-btn')
                    input(class='login100-form-btn', type='submit', value="login") 
                h1
                div(class="ref")
                    a(href='/', class='container-login100-form-btn') home      
                    a(href='/reg', class='container-login100-form-btn') registration